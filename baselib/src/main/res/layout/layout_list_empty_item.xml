<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_status_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/draw_status_data_empty"
            android:scaleType="centerInside"
            android:src="@drawable/ic_status_empty_data" />

    <TextView
            android:id="@+id/tv_status_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dt_8"
            android:gravity="center"
            android:text="@string/hint_list_empty_data"
            android:textColor="@color/colorAccentText"
            android:textSize="@dimen/font_13" />

</LinearLayout>